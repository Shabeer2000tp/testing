<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="welcome-header h3 mb-0">Manage Reminders</h1>
        <p class="text-muted">Schedule and view reminders for students and guides.</p>
    </div>
</div>

<div class="row">
    <!-- Create Reminder Form Column -->
    <div class="col-lg-4">
        <div class="card form-card">
            <div class="card-header">
                <i class="fas fa-plus-circle me-2"></i>Create New Reminder
            </div>
            <div class="card-body">
                <form action="/admin/reminders" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Reminder Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="date" class="form-label">Date</label>
                        <input type="date" class="form-control" id="date" name="date" required>
                    </div>
                    <div class="mb-3">
                        <label for="targetRole" class="form-label">Visible To</label>
                        <select class="form-select" id="targetRole" name="targetRole">
                            <option value="all">All Users</option>
                            <option value="student">Students Only</option>
                            <option value="guide">Guides Only</option>
                        </select>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Schedule Reminder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Reminders List Column -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header"><i class="fas fa-bell me-2"></i>Scheduled Reminders</div>
            <div class="card-body p-0">
                <% if (reminders.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Date</th>
                                    <th>Visible To</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% reminders.forEach(reminder => { %>
                                    <tr>
                                        <td><strong><%= reminder.title %></strong></td>
                                        <td><%= new Date(reminder.date).toLocaleDateString() %></td>
                                        <td>
                                            <span class="badge bg-secondary text-capitalize"><%= reminder.targetRole %></span>
                                        </td>
                                        <td>
                                            <form action="/admin/reminders/<%= reminder._id %>/delete" method="POST" onsubmit="return confirm('Are you sure?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-center text-muted p-4">No reminders have been scheduled yet.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>