<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Details: <%= team.name %></title>
    
    <%- include('../partials/_styles.ejs') %>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        /* Additional styles specific to this page */
        .header { border-bottom: 2px solid #eee; padding-bottom: 1rem; margin-bottom: 2rem; }
        table { width: 100%; border-collapse: collapse; margin-top: 1rem; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    </style>
</head>
<body>

    <div style="padding: 2rem;">
        <div class="header">
            <h1>Team: <%= team.name %></h1>
            <% if (activeSprint) { %>
                <h3>Active Sprint: <%= activeSprint.name %></h3>
                <p><strong>Guide:</strong> <%= team.guide.name %></p>
            <% } else { %>
                <h3>No Active Sprint</h3>
            <% } %>
            <a href="/admin/teams">&larr; Back to All Teams</a>
        </div>

        <% if (activeSprint) { %>
            <div class="team-card">
                <h4>Progress: <%= team.completedStoryPoints %> / <%= team.totalStoryPoints %> Story Points Completed</h4>
                <div class="progress-bar">
                    <div class="progress-bar-inner" style="width: <%= (team.completedStoryPoints / (team.totalStoryPoints || 1)) * 100 %>%">
                        <%= Math.round((team.completedStoryPoints / (team.totalStoryPoints || 1)) * 100) %>%
                    </div>
                </div>

                <h4 style="margin-top: 2rem;">Tasks</h4>
                <table>
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Assigned To</th>
                            <th>Story Points</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% team.tasks.forEach(task => { %>
                            <tr>
                                <td><%= task.description %></td>
                                <td><%= task.assignedTo.name %></td>
                                <td><%= task.storyPoints %></td>
                                <td><%= task.status %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>

                <div class="chart-container" style="margin-top: 2rem;">
                    <h3>Burndown Chart</h3>
                    <canvas id="burndownChart-<%= team._id %>"></canvas>
                </div>
            </div>
        <% } %>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            <% if (team && team.burndownChartData) { %>
                const ctx = document.getElementById('burndownChart-<%= team._id %>');
                if (ctx) {
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: <%- team.burndownChartData.labels %>,
                            datasets: [{
                                label: 'Remaining Work',
                                data: <%- team.burndownChartData.actualData %>,
                                borderColor: 'rgb(75, 192, 192)',
                                tension: 0.1,
                                fill: false
                            }, {
                                label: 'Ideal Pace',
                                data: <%- team.burndownChartData.idealData %>,
                                borderColor: 'rgb(255, 99, 132)',
                                borderDash: [5, 5],
                                fill: false
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: 'Story Points Remaining'
                                    }
                                }
                            }
                        }
                    });
                }
            <% } %>
        });
    </script>
</body>
</html>