    <div class="header-container">
      <a href="#" class="logo">
        <img src="/Sslogo White-02.svg" alt="SprintSync Logo" class="logo-img">
      </a>
      <nav>
        <a href="#">Home</a>
        <a href="#features">Features</a>
        <a href="#about">About</a>
