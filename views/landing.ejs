      <div class="cards">
        <div class="card">
          <img src="/vision.svg" alt="Our Vision">
          <h3>Our Vision</h3>
          <p>To redefine academic project management through an Agile-first approach that bridges collaboration, transparency, and timely delivery for every team.</p>
        </div>
        <div class="card">
          <img src="/mision.svg" alt="Our Mission">
          <h3>Our Mission</h3>
          <p>We aim to empower students and professionals by simplifying Agile implementation — making Scrum practices intuitive, visual, and impactful.</p>
        </div>
        <div class="card">
          <img src="/team.svg" alt="Our Team">
          <h3>Our Team</h3>
          <p>Built by a group of tech enthusiasts passionate about product development and project success, SprintSync embodies teamwork and innovation.</p>
        </div>
      </div>
    </section>

    <footer>
      &copy; 2025 SprintSync. All rights reserved.
    </footer>
  </div>

  <a href="#" class="back-to-top-btn" title="Back to Top">&#8679;</a>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const header = document.querySelector('header');
      const backToTopBtn = document.querySelector('.back-to-top-btn');
      const content = document.querySelector('.content-to-fade');

      // Fade in content on initial load
      // A small delay ensures styles are applied before transition starts
      setTimeout(() => {
        if(content) content.classList.add('visible');
      }, 10);
      
      window.addEventListener('scroll', function() {
        // Header scroll logic
        if (window.scrollY > 10) { // Add class after scrolling 10px
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }

        // Back to top button visibility
        if (window.scrollY > 300) { // Show button after 300px
          backToTopBtn.classList.add('visible');
        } else {
          backToTopBtn.classList.remove('visible');
        }
      });

      // Scroll-spy for navigation links
      const sections = document.querySelectorAll('section[id]');
      const navLinks = document.querySelectorAll('nav a[href^="#"]');
      const homeLink = document.querySelector('nav a[href="#"]');

      function changeNavOnScroll() {
        let currentSectionId = '';
        const headerHeight = header.offsetHeight + 50; // Offset to trigger highlight sooner

        sections.forEach(section => {
          const sectionTop = section.offsetTop;
          if (window.scrollY >= sectionTop - headerHeight) {
            currentSectionId = section.getAttribute('id');
          }
        });

        // Special case for the last section when scrolled to the bottom
        const isAtBottom = window.innerHeight + window.scrollY >= document.body.offsetHeight - 2; // -2 for buffer
        if (isAtBottom) {
            currentSectionId = sections[sections.length - 1].getAttribute('id');
        }

        navLinks.forEach(link => {
          link.classList.remove('active');
          if (link.getAttribute('href') === `#${currentSectionId}`) {
            link.classList.add('active');
          }
        });
      }

      window.addEventListener('scroll', changeNavOnScroll);
    });
  </script>
</body>
</html>