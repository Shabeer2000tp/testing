<%- include('../partials/_header.ejs', { title: title, user: user, sprintSetting: sprintSetting }) %>

<div class="welcome-header">
    <h1>Student Dashboard</h1>
    <p>Welcome, <%= user.name %></p>
</div>

<%- include('../partials/_messages.ejs') %>

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-chart-line me-2"></i> Team Project Progress</div>
    <div class="card-body">
        <p><%= overallCompletedPoints %> / <%= teamTotalPlannedPoints %> Total Story Points Completed</p>
        <div class="progress" style="height: 24px;">
            <div class="progress-bar bg-primary" style="width: <%= Math.round((overallCompletedPoints / (teamTotalPlannedPoints || 1)) * 100) %>%">
                <%= Math.round((overallCompletedPoints / (teamTotalPlannedPoints || 1)) * 100) %>%
            </div>
        </div>
    </div>
</div>

<% if (activeSprint && team) { %>
<div class="row">
    <div class="col-lg-8">

        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-tasks me-2"></i> Current Tasks: <%= team.name %></div>
            <div class="card-body p-0">
                <% if (teamTasks.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Task</th>
                                    <th>Assigned To</th>
                                    <th>Points</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% teamTasks.forEach(task => { %>
                                    <tr>
                                        <td><%= task.description %></td>
                                        <td>
                                            <% if (task.assignedToAll) { %>
                                                All Members
                                            <% } else { %>
                                                <%= task.assignedTo ? task.assignedTo.name : 'Unassigned' %>
                                            <% } %>
                                        </td>
                                        <td><span class="badge bg-secondary"><%= task.storyPoints %></span></td>
                                        <td><%= task.startDate ? new Date(task.startDate).toLocaleDateString() : 'N/A' %></td>
                                        <td><%= task.endDate ? new Date(task.endDate).toLocaleDateString() : 'N/A' %></td>
                                        <td>
                                            <form action="/student/tasks/<%= task._id %>/status" method="POST" class="d-inline me-2">
                                                <select name="status" class="form-select form-select-sm d-inline-block w-auto" onchange="this.form.submit()">
                                                    <option value="To-Do" <%= task.status === 'To-Do' ? 'selected' : '' %>>To-Do</option>
                                                    <option value="In Progress" <%= task.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                                                    <option value="Done" <%= task.status === 'Done' ? 'selected' : '' %>>Done</option>
                                                </select>
                                            </form>
                                            <% 
                                                const __now = new Date();
                                                let __badgeText = '';
                                                let __badgeClass = '';
                                                if (task.status === 'Done') {
                                                    __badgeText = 'Completed';
                                                    __badgeClass = 'status-completed';
                                                } else if (task.endDate) {
                                                    const __end = new Date(task.endDate);
                                                    const __days = Math.ceil((__end - __now) / (1000 * 60 * 60 * 24));
                                                    if (__days <= 2) {
                                                        __badgeText = 'At Risk';
                                                        __badgeClass = 'status-at-risk';
                                                    } else {
                                                        __badgeText = 'On Track';
                                                        __badgeClass = 'status-on-track';
                                                    }
                                                } else {
                                                    __badgeText = 'On Track';
                                                    __badgeClass = 'status-on-track';
                                                }
                                            %>
                                            <span class="status-badge <%= __badgeClass %>"><%= __badgeText %></span>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="p-4 text-center text-muted">No tasks have been added to this sprint yet.</div>
                <% } %>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-calendar-alt me-2"></i>Sprint Calendar</div>
            <div class="card-body">
                <div id="calendar"></div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-chart-line me-2"></i> Burndown Chart</div>
            <div class="card-body">
                <div class="chart-container" style="height: 300px;">
                    <canvas id="burndownChart"></canvas>
                </div>
            </div>
        </div>

    </div>

    <div class="col-lg-4">

        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-flag me-2"></i> Sprint: <%= activeSprint.name %></div>
            <div class="card-body">
                <p><strong>Goal:</strong> <%= activeSprint.goal %></p>
                <hr>
                <h5>Sprint Progress</h5>
                <p><%= completedStoryPoints %> / <%= totalStoryPoints %> Story Points Completed</p>
                <div class="progress" style="height: 24px;">
                    <div class="progress-bar bg-info" style="width: <%= Math.round((completedStoryPoints / (totalStoryPoints || 1)) * 100) %>%">
                        <%= Math.round((completedStoryPoints / (totalStoryPoints || 1)) * 100) %>%
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-plus-circle me-2"></i> Add New Task</div>
            <div class="card-body">
                <form action="/student/tasks" method="POST">
                    <input type="hidden" name="sprintId" value="<%= activeSprint._id %>">
                    <input type="hidden" name="teamId" value="<%= team._id %>">
                    <div class="mb-3">
                        <label for="description" class="form-label">Task Description</label>
                        <textarea class="form-control" id="description" name="description" rows="2" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="storyPoints" class="form-label">Story Points</label>
                        <input type="number" class="form-control" id="storyPoints" name="storyPoints" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" required>
                    </div>
                    <div class="mb-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" required>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="assignToAll" value="true" id="assignToAll">
                            <label class="form-check-label" for="assignToAll">
                                Assign to all team members
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-plus me-2"></i>Add Task</button>
                </form>
            </div>
        </div>

    </div>
</div>
<% } else { %>
    <div class="card">
        <div class="card-body text-center p-5">
            <i class="fas fa-info-circle fa-2x mb-3 text-muted"></i>
            <h4>No Active Sprint</h4>
            <p class="text-muted">There is no active sprint for your team at the moment.</p>
        </div>
    </div>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Burndown Chart script
        <% if (burndownChartData) { %>
            const ctx = document.getElementById('burndownChart');
            if (ctx) { new Chart(ctx, { type: 'line', data: { labels: <%- burndownChartData.labels %>, datasets: [{ label: 'Remaining Work', data: <%- burndownChartData.actualData %>, borderColor: 'rgb(75, 192, 192)', tension: 0.1, fill: true }, { label: 'Ideal Pace', data: <%- burndownChartData.idealData %>, borderColor: 'rgb(255, 99, 132)', borderDash: [5, 5], fill: false }] }, options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, title: { display: true, text: 'Story Points Remaining' } } } } }); }
        <% } %>

        // Calendar script
        const calendarEl = document.getElementById('calendar');
        if (calendarEl && typeof calendarEvents !== 'undefined') {
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: { left: 'prev,next today', center: 'title', right: 'dayGridMonth,timeGridWeek' },
                events: <%- JSON.stringify(calendarEvents) %>
            });
            calendar.render();
        }
    });
</script>

<%- include('../partials/_footer.ejs') %>
