<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="welcome-header h3 mb-0">My Team's Reviews</h1>
        <p class="text-muted">A history of all scheduled reviews for your team.</p>
    </div>
</div>

<% if (reviews.length > 0) { %>
    <div class="accordion" id="reviewsAccordion">
        <% reviews.forEach((review, index) => { %>
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-<%= index %>">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= index %>">
                        <span class="me-3"><i class="fas fa-clipboard-check text-primary"></i></span>
                        <div class="flex-grow-1">
                            <strong>Review for <%= review.team.name %></strong>
                            <div class="small text-muted">Date: <%= new Date(review.reviewDate).toLocaleDateString() %></div>
                        </div>
                    </button>
                </h2>
                <div id="collapse-<%= index %>" class="accordion-collapse collapse" data-bs-parent="#reviewsAccordion">
                    <div class="accordion-body">
                        <h6 class="card-subtitle mb-2 text-muted">Review Panel:</h6>
                        <ul class="list-inline">
                            <% review.panel.forEach(member => { %>
                                <li class="list-inline-item">
                                    <span class="badge bg-secondary"><%= member.name %></span>
                                </li>
                            <% }); %>
                        </ul>
                        <hr>
                        <a href="/student/reviews/<%= review._id %>" class="btn btn-primary">
                            <i class="fas fa-eye me-1"></i> View Details & Remarks
                        </a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="card">
        <div class="card-body text-center p-5">
            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No Reviews Scheduled</h5>
            <p class="mb-0">There are no reviews scheduled for your team yet.</p>
        </div>
    </div>
<% } %>