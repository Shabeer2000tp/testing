<%- include('../partials/_header.ejs', { title: title, user: user, sprintSetting: sprintSetting }) %>

<div class="main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Settings</h1>
        <a href="/student/dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <%- include('../partials/_messages.ejs') %>

    <div class="card shadow-sm" style="max-width: 600px;">
        <div class="card-header bg-light text-dark">
            <i class="fas fa-lock me-2"></i>Change Password
        </div>
        <div class="card-body">
            <form action="/student/settings" method="POST">
                <div class="mb-3">
                    <label class="form-label">Current Password</label>
                    <input type="password" name="currentPassword" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" name="newPassword" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm New Password</label>
                    <input type="password" name="confirmPassword" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Update Password</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mt-4" style="max-width: 600px;">
        <div class="card-header bg-light text-dark">
            <i class="fas fa-image me-2"></i>Profile Picture
        </div>
        <div class="card-body">
            <form action="/student/settings/profile-picture" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Upload New Picture</label>
                    <input type="file" name="profilePicture" class="form-control" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/_footer.ejs') %>