<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="welcome-header h3 mb-0">Upload Deliverable</h1>
        <p class="text-muted">Submit your project files, documents, and other deliverables.</p>
    </div>
</div>

<% if (!team) { %>
    <div class="card text-center">
        <div class="card-body p-5">
            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
            <h5 class="card-title">Not Assigned to a Team</h5>
            <p class="text-muted">You must be assigned to a team by an administrator before you can upload files.</p>
        </div>
    </div>
<% } else { %>
    <div class="row">
        <!-- Upload Form Column -->
        <div class="col-lg-4">
            <div class="card form-card">
                <div class="card-header">
                    <i class="fas fa-upload me-2"></i>Submit New File
                </div>
                <div class="card-body">
                    <form action="/student/upload" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="teamId" value="<%= team._id %>">
                        <div class="mb-3">
                            <label for="file" class="form-label">Choose File</label>
                            <input type="file" class="form-control" id="file" name="file" required>
                        </div>
                        <div class="mb-3">
                            <label for="taskId" class="form-label">Link to Task (Optional)</label>
                            <select class="form-select" id="taskId" name="taskId">
                                <option value="">-- No specific task --</option>
                                <% tasks.forEach(task => { %>
                                    <option value="<%= task._id %>"><%= task.description %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Upload File</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Upload History Column -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header"><i class="fas fa-history me-2"></i>Upload History</div>
                <div class="card-body p-0">
                    <% if (deliverables.length > 0) { %>
                        <div class="list-group list-group-flush">
                            <% deliverables.forEach(file => { %>
                                <a href="/<%= file.filePath %>" download class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1"><i class="fas fa-file-alt me-2"></i><%= file.fileName %></h6>
                                        <small class="text-muted"><%= new Date(file.createdAt).toLocaleDateString() %></small>
                                    </div>
                                    <small class="text-muted">Uploaded by: <%= file.uploadedBy.name %></small>
                                </a>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p class="text-center text-muted p-4">No files have been uploaded for your team yet.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
<% } %>