<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="welcome-header h3 mb-0">My Assigned Reviews</h1>
        <p class="text-muted">A list of all reviews where you are a panel member.</p>
    </div>
</div>

<% if (reviews.length > 0) { %>
    <div class="accordion" id="reviewsAccordion">
        <% reviews.forEach((review, index) => { %>
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-<%= index %>">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= index %>">
                        <span class="me-3"><i class="fas fa-clipboard-check text-primary"></i></span>
                        <div class="flex-grow-1">
                            <strong>Review for <%= review.team.name %></strong>
                            <div class="small text-muted">Date: <%= new Date(review.reviewDate).toLocaleString() %></div>
                        </div>
                    </button>
                </h2>
                <div id="collapse-<%= index %>" class="accordion-collapse collapse" data-bs-parent="#reviewsAccordion">
                    <div class="accordion-body">
                        <p>This review is for team <strong><%= review.team.name %></strong>.</p>
                        <a href="/guide/reviews/<%= review._id %>" class="btn btn-primary">
                            <i class="fas fa-eye me-1"></i> View Details & Add Remarks
                        </a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="card">
        <div class="card-body text-center p-5">
            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No Reviews Assigned</h5>
            <p class="mb-0">You have not been assigned to any review panels yet.</p>
        </div>
    </div>
<% } %>