<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="welcome-header h3 mb-0">Review for: <%= review.team.name %></h1>
        <p class="text-muted">Scheduled for: <%= new Date(review.reviewDate).toLocaleDateString() %></p>
    </div>
    <div>
        <a href="/guide/reviews" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to My Reviews
        </a>
    </div>
</div>

    <div class="row">
    <!-- Left Column: Submitted Remarks & Form -->
    <div class="col-lg-7">
        <% const hasSubmitted = review.remarks.some(r => r.reviewer._id.equals(user.profileId)); %>

        <% if (!hasSubmitted) { %>
            <div class="card form-card mb-4">
                <div class="card-header"><i class="fas fa-plus-circle me-2"></i>Add Your Remarks</div>
                <div class="card-body">
                    <form action="/guide/reviews/<%= review._id %>/remarks" method="POST">
                        <div class="mb-3">
                            <label for="suggestions" class="form-label">Suggestions for Improvement</label>
                            <textarea class="form-control" id="suggestions" name="suggestions" rows="4"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="remarks" class="form-label">General Remarks</label>
                            <textarea class="form-control" id="remarks" name="remarks" rows="4"></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Submit Remarks</button>
                        </div>
                    </form>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i> You have already submitted your remarks for this review.
            </div>
        <% } %>

        <div class="card">
            <div class="card-header">
                <i class="fas fa-comments me-2"></i>Submitted Remarks
            </div>
            <div class="card-body">
                <% if (review.remarks && review.remarks.length > 0) { %>
                    <% review.remarks.forEach(remark => { %>
                        <div class="card remark-card">
                            <div class="card-header">
                                <i class="fas fa-user-tie me-2"></i><strong><%= remark.reviewer.name %></strong>
                            </div>
                            <div class="card-body">
                                <% if (remark.suggestions) { %>
                                    <div class="remark-section mb-3">
                                        <h6>Suggestions:</h6>
                                        <p class="mb-0"><%= remark.suggestions %></p>
                                    </div>
                                <% } %>
                                <% if (remark.remarks) { %>
                                    <div class="remark-section">
                                        <h6>General Remarks:</h6>
                                        <p class="mb-0"><%= remark.remarks %></p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center text-muted p-4">No remarks have been submitted yet.</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Right Column: Team & Panel Info -->
    <div class="col-lg-5">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="reviewDetailTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">Info</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="deliverables-tab" data-bs-toggle="tab" data-bs-target="#deliverables" type="button" role="tab">Deliverables</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="backlog-tab" data-bs-toggle="tab" data-bs-target="#backlog" type="button" role="tab">Backlog</button>
                    </li>
                </ul>
            </div>
            <div class="card-body p-0">
                <div class="tab-content" id="reviewDetailTabsContent">
                    <!-- Info Tab -->
                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item list-group-item-secondary"><i class="fas fa-users me-2"></i><strong>Team Members</strong></div>
                            <% review.team.students.forEach(student => { %>
                                <div class="list-group-item"><%= student.name %></div>
                            <% }); %>
                            <div class="list-group-item list-group-item-secondary"><i class="fas fa-user-shield me-2"></i><strong>Review Panel</strong></div>
                            <% review.panel.forEach(member => { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center <%= member._id.equals(user.profileId) ? 'active' : '' %>">
                                    <%= member.name %>
                                    <% if (member._id.equals(user.profileId)) { %><span class="badge bg-light text-dark">You</span><% } %>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                    <!-- Deliverables Tab -->
                    <div class="tab-pane fade" id="deliverables" role="tabpanel" style="max-height: 450px; overflow-y: auto;">
                        <div class="list-group list-group-flush">
                            <% if (deliverables && deliverables.length > 0) { %>
                                <% deliverables.forEach(file => { %>
                                    <a href="/deliverables/download/<%= file._id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-file-alt me-2"></i><%= file.fileName %>
                                            <small class="d-block text-muted">Uploaded by: <%= file.uploadedBy.name %></small>
                                        </div>
                                        <i class="fas fa-download"></i>
                                    </a>
                                <% }); %>
                            <% } else { %>
                                <div class="list-group-item text-center text-muted p-4">No deliverables uploaded.</div>
                            <% } %>
                        </div>
                    </div>
                    <!-- Backlog Tab -->
                    <div class="tab-pane fade" id="backlog" role="tabpanel" style="max-height: 450px; overflow-y: auto;">
                        <div class="list-group list-group-flush">
                            <% if (backlogItems && backlogItems.length > 0) { %>
                                <% backlogItems.forEach(item => { %>
                                    <div class="list-group-item">
                                        <p class="mb-1"><strong><%= item.title %></strong></p>
                                        <small class="text-muted"><%= item.description %></small>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="list-group-item text-center text-muted p-4">The team backlog is empty.</div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>