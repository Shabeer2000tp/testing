<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="welcome-header h3 mb-0">Notifications</h1>
        <p class="text-muted">A history of all messages and alerts.</p>
    </div>
    <% if (notifications.some(n => !n.isRead)) { %>
        <form action="/guide/notifications/mark-all-read" method="POST">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fas fa-check me-1"></i> Mark All as Read
            </button>
        </form>
    <% } %>
</div>

<div class="card">
    <div class="card-header"><i class="fas fa-bell me-2"></i>Your Inbox</div>
    <div class="card-body p-0">
        <% if (notifications.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>From</th>
                            <th>Message</th>
                            <th>Received</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% notifications.forEach(notification => { %>
                            <tr class="<%= !notification.isRead ? 'fw-bold' : '' %>">
                                <td><%= notification.senderName %></td>
                                <td>
                                    <%= notification.message.substring(0, 60) %>
                                    <% if (notification.message.length > 60) { %>...<% } %>
                                </td>
                                <td><%= new Date(notification.createdAt).toLocaleDateString() %></td>
                                <td class="text-end">
                                    <a href="/guide/notifications/<%= notification._id %>" class="btn btn-sm btn-outline-primary view-details" data-id="<%= notification._id %>">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-center text-muted p-4">
                <i class="fas fa-bell-slash me-2"></i> You have no notifications.
            </p>
        <% } %>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // The logic to mark as read before navigation is good, but can be simplified
        // by just navigating directly. The detail page itself marks it as read.
    });
</script>