<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sprint Sync</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <%- include('./_styles.ejs') %>
    <style>
        .auth-body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: var(--dark-gray); /* Match main app background */
        }
        .auth-card {
            width: 100%;
            /* Max-width for two-column layout on larger screens */
            max-width: 800px; 
            border: none;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05); /* A subtle shadow for depth */
            border-radius: 0.75rem;
            overflow: hidden; /* Ensures content respects the border-radius */
        }
        /* Apply dark theme to the form part of the card */
        .auth-card .card-body {
            background-color: var(--gray);
            color: var(--white);
        }

        /* Override for single-column forms like registration */
        .auth-card.single-column {
            max-width: 500px;
        }

        .auth-logo {
            max-height: 50px;
            margin-bottom: 1rem;
        }
        /* Styles for the branding column on the left */
        .auth-branding {
            background-color: var(--black); /* Use black for high contrast */
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            text-align: center;
        }
        .auth-branding-logo {
            max-width: 150px; /* Larger logo for better visibility */
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body class="auth-body">
    <!-- Page Loader -->
    <div class="page-loader">
        <div class="spinner"></div>
    </div>

    <div class="content-to-fade">
        <%- body %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loader = document.querySelector('.page-loader');
            const content = document.querySelector('.content-to-fade');
            
            // Hide loader on initial page load
            loader.style.opacity = '0';
            setTimeout(() => { 
                loader.style.display = 'none'; 
                content.classList.add('visible'); // Fade in content
            }, 300); // Matches loader transition

            // Show loader when navigating away
            document.querySelectorAll('a[href]:not([href^="#"]):not([target="_blank"])').forEach(link => {
                link.addEventListener('click', function(e) {
                    loader.style.display = 'flex';
                    setTimeout(() => { loader.style.opacity = '1'; }, 10);
                });
            });

            // Hide loader if user navigates back with browser buttons
            window.addEventListener('pageshow', function(event) {
                // This handles the case where the user hits the back button
                if (event.persisted) {
                    loader.style.display = 'none';
                    loader.style.opacity = '0';
                }
            });
        });
    </script>
</body>
</html>