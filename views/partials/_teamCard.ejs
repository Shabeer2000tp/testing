<div class="team-card">
  <!-- Clickable Main Section -->
  <a href="<%= urlPrefix %>/teams/<%= team._id %>" class="team-card-link-main">
    <!-- Header -->
    <div class="team-card-header">
      <h3 class="team-name"><%= team.name %></h3>
      <% if (urlPrefix.includes('admin')) { %>
        <div class="team-guide">
          <%= team.guide && team.guide.name ? team.guide.name : 'No guide assigned' %>
        </div>
      <% } %>
    </div>

    <!-- Body / Progress Info -->
    <div class="team-card-body">
      <% if (typeof team.completedStoryPoints !== 'undefined') { %>
        <div class="progress-section">
          <div class="progress-header">
            <span class="progress-title">Current Sprint</span>
            <span class="progress-value"><%= team.completedStoryPoints %> / <%= team.sprintCapacity %> SP</span>
          </div>
          <div class="progress">
            <div
              class="progress-bar bg-primary"
              style="width: <%= (team.completedStoryPoints / (team.sprintCapacity || 1)) * 100 %>%">
              <%= Math.round((team.completedStoryPoints / (team.sprintCapacity || 1)) * 100) %>%
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="no-sprint-message">No active sprint</div>
      <% } %>

      <div class="progress-section">
        <div class="progress-header">
          <span class="progress-title">Overall Project</span>
          <span class="progress-value"><%= team.overallCompletedPoints %> / <%= team.overallTotalPoints %> SP</span>
        </div>
        <div class="progress">
          <div
            class="progress-bar bg-success"
            style="width: <%= (team.overallCompletedPoints / (team.overallTotalPoints || 1)) * 100 %>%">
            <%= Math.round((team.overallCompletedPoints / (team.overallTotalPoints || 1)) * 100) %>%
          </div>
        </div>
      </div>
    </div>
  </a>

  <!-- Footer / Actions -->
  <div class="card-actions">
    <a href="<%= urlPrefix %>/teams/<%= team._id %>/backlog" class="btn-action">
      <i class="fas fa-list-alt me-1"></i>Backlog
    </a>

    <% if (urlPrefix.includes('admin')) { %>
      <a href="/admin/teams/<%= team._id %>/edit" class="btn-action btn-edit">
        <i class="fas fa-edit me-1"></i>Edit
      </a>
      <form action="/admin/teams/<%= team._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?');">
        <button type="submit" class="btn-action btn-delete">
          <i class="fas fa-trash me-1"></i>Delete
        </button>
      </form>
    <% } %>
  </div>
</div>
