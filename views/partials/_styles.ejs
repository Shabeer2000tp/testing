<style>

/* -------------------------------------------------
   COLOR PALETTE (Black + Silver + Subtle Blue Accent)
--------------------------------------------------- */
:root {
  --black: #000000;
  --dark-gray: #1A1A1A;
  --gray: #3A3A3A;
  --light-gray: #D9D9D9;
  --silver: #E6E6E6;
  --accent: #3DA5FF;  /* subtle academic blue */
  --white: #FFFFFF;
}

/* -------------------------------------------------
   GLOBAL PAGE RESET
--------------------------------------------------- */
body {
  background-color: var(--dark-gray);
  color: var(--white);
  margin: 0;
  font-family: "Inter", sans-serif;
  letter-spacing: .3px;
}

.app-body {
  display: flex;
}

.main-content {
  flex-grow: 1;
  padding: 28px;
  margin-left: 250px; /* Match sidebar width */
  width: calc(100% - 250px);
}

a {
  text-decoration: none;
  color: var(--accent);
}

a:hover {
  opacity: 0.8;
}

.text-muted {
  color: var(--light-gray) !important; /* Override Bootstrap's default for dark theme */
}


/* -------------------------------------------------
   NAVBAR (Black Academic Style)
   ** This is now the Sidebar **
--------------------------------------------------- */
.sidebar {
  width: 250px;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: var(--black);
  z-index: 1000;
}

/* Sidebar Logo */
.sidebar-logo {
  height: 70px; /* Adjust as needed */
  width: auto;
}

.sidebar-logo-container {
  padding: 1rem 1.5rem;
  text-align: left;
}

/* Sidebar Navigation Links */
.sidebar .nav-link {
  color: var(--silver); /* Default link color */
  font-size: 15px;
  padding: 10px 16px;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.sidebar .nav-link:hover {
  background-color: var(--gray); /* Darker gray on hover */
  color: var(--white); /* Brighter text on hover */
  border-radius: 6px;
}

.sidebar .nav-link.active {
  background-color: var(--accent); /* Accent color for active link */
  color: var(--black); /* Dark text on accent background */
  font-weight: 600;
  border-radius: 6px;
}

/* Sidebar Logout Button */
.sidebar .btn-outline-light {
    color: var(--silver);
    border-color: var(--gray);
}

.sidebar .btn-outline-light:hover {
    color: var(--white);
    background-color: var(--gray);
    border-color: var(--gray);
}

/* -------------------------------------------------
   PAGE CONTAINERS
--------------------------------------------------- */
.container-custom {
  max-width: 1250px;
  margin: auto;
  padding: 28px;
}

/* -------------------------------------------------
   CARDS
--------------------------------------------------- */
.card {
  background-color: var(--gray);
  color: var(--white);
  border-radius: 10px;
  border: none;
  padding: 18px 22px;
  margin-bottom: 18px;
  transition: transform .2s ease;
}

.card .card-subtitle {
  color: var(--silver);
}

/* --- NEW TEAM CARD DESIGN --- */

.team-card-container {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  margin-top: 1rem;
}

.team-card {
  background-color: var(--dark-gray);
  border: 1px solid var(--gray);
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  transition: all 0.2s ease-in-out;
  flex: 1 1 calc(33.333% - 16px); /* Default: 3 cards per row. 16px = 2/3 of 24px gap */
  overflow: hidden; /* Ensures child elements respect the border radius */
}

.team-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.4);
  border-color: var(--accent);
}

.team-card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20px 20px 16px 20px;
  border-bottom: 1px solid var(--gray);
}

.team-card-header h5 {
  margin: 0;
  font-weight: 600;
  font-size: 1.1rem;
  line-height: 1.3;
}

.team-card-body {
  padding: 16px 20px;
  display: flex;
  flex-direction: column;
  gap: 16px;
  flex-grow: 1; /* Allows body to fill space */
}

.team-members {
  font-size: 14px;
  color: var(--light-gray);
  line-height: 1.6;
}

.team-members strong {
  color: var(--silver);
  font-weight: 500;
}

.team-card-actions {
  margin-top: auto; /* Pushes actions to the bottom */
  padding: 16px 20px;
  border-top: 1px solid var(--gray);
  background-color: rgba(0,0,0,0.2);
  display: flex;
  gap: 10px;
}

/* "Create New Team" Card Style */
.create-team-card {
  flex: 1 1 calc(33.333% - 16px);
  border: 2px dashed var(--light-gray);
  background-color: transparent;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: var(--light-gray);
  cursor: pointer;
  min-height: 350px; /* Give it a consistent height */
  transition: all 0.2s ease-in-out;
}

.create-team-card:hover {
  transform: translateY(-5px);
  border-color: var(--accent);
  background-color: var(--gray);
  color: var(--white);
}

.create-team-card i {
  font-size: 40px;
  margin-bottom: 16px;
}

/* Refined Progress Bar Styles */

.progress-header {
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  margin-bottom: 6px;
  color: var(--silver);
}

.progress-title {
  font-weight: 500;
}

.progress {
  height: 8px;
  background-color: var(--dark-gray);
  border-radius: 4px;
  overflow: hidden;
}

.progress-bar {
  width: calc(var(--p, 0) * 1%); /* Use CSS variable --p as percent fallback */
  transition: width 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94); /* Smooth animation */
  height: 100%;
  display: flex;
  background-color: var(--accent); /* Default color */
}

/* Progress Bar Color Variants */
.progress-bar-danger {
  background-color: #e74a3b; /* Red */
}
.progress-bar-warning {
  background-color: #f6c23e; /* Yellow */
}
.progress-bar-success {
  background-color: #28a745; /* Green */
}

/* Member chip styles used on team cards */
.member-list {
  margin-top: 8px;
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}
.member-chip {
  display: inline-block;
  padding: 4px 8px;
  background: rgba(255,255,255,0.03);
  border: 1px solid rgba(255,255,255,0.03);
  border-radius: 12px;
  font-size: 12px;
  color: var(--accent);
}

/* --- Responsive Card Overrides --- */
/* Tablet - 2 cards per row */
@media (max-width: 992px) {
  .team-card, .create-team-card {
    flex-basis: calc(50% - 12px); /* 12px = 1/2 of 24px gap */
  }
}

/* Mobile - 1 card per row */
@media (max-width: 768px) {
  .team-card, .create-team-card {
    flex-basis: 100%;
  }
}

/* -------------------------------------------------
   TABLE DESIGN
--------------------------------------------------- */
.table thead {
  background-color: var(--black);
}

.table tbody tr {
  background-color: var(--gray);
  border-bottom: 1px solid var(--dark-gray);
}

.table tbody tr:hover {
  background-color: var(--black);
}

/* -------------------------------------------------
   BUTTONS
--------------------------------------------------- */
.btn-accent {
  background-color: var(--accent);
  border: none;
  color: var(--black);
  padding: 8px 14px;
  border-radius: 6px;
  font-weight: 600;
}

.btn-accent:hover {
  opacity: 0.85;
}

.btn-action {
  padding: 5px 10px;
  font-size: 14px;
  border-radius: 5px;
  margin-right: 5px;
  color: var(--silver);
  border: 1px solid var(--gray);
}

.btn-action:hover {
  background-color: var(--gray);
  color: var(--white);
}
/* -------------------------------------------------
   INPUTS + FORMS
--------------------------------------------------- */
input, select, textarea {
  background-color: var(--gray);
  border: 1px solid var(--silver);
  color: var(--white);
  border-radius: 6px;
  padding: 9px 12px;
  width: 100%;
  outline: none;
}

input:focus, select:focus, textarea:focus {
  border-color: var(--accent);
}

/* -------------------------------------------------
   SKELETON SHIMMER LOADING
--------------------------------------------------- */
.skeleton {
  background: linear-gradient(90deg, #D9D9D9 25%, #E6E6E6 50%, #D9D9D9 75%);
  background-size: 200% 100%;
  border-radius: 6px;
  animation: shimmer 1.4s infinite ease-in-out;
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* Predefined skeleton shapes */
.skeleton-text { height: 14px; width: 100%; margin-bottom: 8px; }
.skeleton-title { height: 22px; width: 60%; margin-bottom: 12px; }
.skeleton-avatar { width: 40px; height: 40px; border-radius: 50%; }
.skeleton-card { height: 160px; width: 100%; border-radius: 10px; }

/* Loading visibility control */
.loading .hide-when-loading { display: none; }
.loading .show-when-loading { display: block; }

/* Smooth fade reveal for content */
.hide-when-loading {
  opacity: 0;
  transition: opacity 0.4s ease;
}
:not(.loading) .hide-when-loading {
  opacity: 1;
}

</style>
